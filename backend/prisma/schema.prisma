generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  jobs Job[]
}

model Job {
  id          String   @id @default(uuid())
  title       String
  description String
  location    String
  salary      Int?
  createdAt   DateTime @default(now())

  adminId String
  admin   Admin  @relation(fields: [adminId], references: [id])

  application Application[]
}

model Application {
  id        String   @id @default(uuid())
  name      String
  email     String
  resumeUrl String
  createdAt DateTime @default(now())

  jobId String
  job   Job    @relation(fields: [jobId], references: [id])
}
